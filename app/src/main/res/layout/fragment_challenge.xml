<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/challenge"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#5cbba1"
                android:textSize="30dp"
                android:layout_marginLeft="13dp"
                android:text="挑战"/>

        <Button
                android:id="@+id/history"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/history"
                android:text=""/>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aac0c0c0"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal"
                  android:background="@drawable/join"
                  android:layout_height="110dp">


        <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/imageView3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/medal"
                android:layout_width="80dp"/>
        <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="#aac0c0c0"
                android:layout_gravity="center_horizontal"
        />
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <TextView
                    android:id="@+id/challengename"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="挑战：夜跑一万米"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/onlinetime"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="结束时间：018：7：1"
                    android:textSize="15dp"/>
            <TextView
                    android:id="@+id/number"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="参与人数：100"
                    android:textSize="15dp"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="你的排名：50"
                    android:textSize="15dp"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal"
                  android:background="@drawable/join"
                  android:layout_height="100dp">


        <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/imageView3111"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/medal"
                android:layout_width="wrap_content"/>
        <View
                android:background="#aac0c0c0"
                android:layout_gravity="center_horizontal"
                android:layout_width="1dp"
                android:layout_height="1dp"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/challengename111"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="挑战：100次蛙跳"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/onlinetime111"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="结束时间:2018:6:28"
                    android:textSize="15dp"/>

            <Button
                    android:id="@+id/join"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bt_shape"
                    android:textColor="@color/bg"
                    android:text="加入"
                    android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>